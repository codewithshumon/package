{
  "name": "@codewithshumon/popup-menu",
  "version": "2.0.8",
  "description": "A lightweight Popup Menu component for React with TailwindCSS support.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "build:js": "rollup -c",
    "build": "npm run clean && npm run build:types && npm run build:js && cp dist/types/index.d.ts dist/index.d.ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rollup": "^4.21.0",
    "tslib": "^2.8.1",
    "typescript": "^5.1.0"
  },
  "keywords": [
    "react",
    "popup",
    "menu",
    "dropdown",
    "tailwindcss",
    "component",
    "nextjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codewithshumon/popup-menu.git"
  },
  "bugs": {
    "url": "https://github.com/codewithshumon/popup-menu/issues"
  },
  "homepage": "https://github.com/codewithshumon/popup-menu#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
